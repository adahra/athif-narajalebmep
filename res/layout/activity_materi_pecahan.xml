<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="${relativePackage}.${activityClass}"
    tools:ignore="ExtraText" >
    
   <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/imgBtnMateriPecahanPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_string_content_description"
            android:src="@android:drawable/ic_media_play"
            android:visibility="invisible"
            tools:ignore="UnusedAttribute" />

        <ImageButton
            android:id="@+id/imgBtnMateriPecahanStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_string_content_description"
            android:src="@android:drawable/ic_media_pause"
            android:visibility="invisible"
            tools:ignore="UnusedAttribute" />

    </TableRow>

    <TextView
        android:id="@+id/txtViewJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tableRow1"
        android:text="@string/isi_materi_text"
        android:textSize="24sp"
 		android:visibility="invisible"  />
    
    <TextView
        android:id="@+id/txtViewMateriPecahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtViewJudul"
        android:text="@string/isi_materi_text"
        android:textSize="16sp"
        android:visibility="invisible"  />
    
    <ImageButton
        android:id="@+id/imgBtnMateriPecahanTampil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtViewMateriPecahan"
        android:contentDescription="@string/image_string_content_description"
        android:src="@android:drawable/bottom_bar"
        android:visibility="invisible"
        tools:ignore="UnusedAttribute" />

    <Button
        android:id="@+id/btnMateriPecahanKembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgBtnMateriPecahanTampil"
        android:text="@string/isi_materi_kembali" 
        android:visibility="invisible"  />
    
    <Button
        android:id="@+id/btnMateriPecahanSelanjutnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMateriPecahanKembali"
        android:layout_alignBottom="@+id/btnMateriPecahanKembali"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/isi_materi_selanjutnya" 
        android:visibility="invisible"  />
    
    <ListView
        android:id="@+id/lvMateriPecahan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >
    </ListView>
    

</RelativeLayout>
